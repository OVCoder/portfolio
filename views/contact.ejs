<html>
  <head>
    <title>Contact Olga</title>
		<link rel="stylesheet" type="text/css" href="contact.css"/>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	</head>
  <body>
    <div><!--START-->
			<div id="wrapper">
				<h2>Contact Olga</h2>
				<p>
						Send me your message and I will get back to you as soon as possible.
				</p>
				<form role="form" method="post" id="contactForm" action="/thanks" method="POST" target="no-target">
					<div>
						<div>
							<label for="firstName" >First Name:</label>
							<input id="firstName"  name="firstName" type="text" maxlength="50">
						</div>
						<div>
							<label for="lastName">Last Name:</label>
							<input id="lastName"  name="lastName"x type="text" maxlength="50">
						</div>
					</div>
					<div >
						<div>
							<label for="email">Email:</label>
							<input id="email" name="email" type="text" maxlength="50">
						</div>
						<div>
							<label for="email">Phone:</label>
							<input id="phoneInput" name="phone" type="tel" required maxlength="50" cols="70">
						</div>
					</div>
				  <div>
						<div >
							<label for="name" div="messageLabel">Message:</label>
							<textarea type="textarea" id="message" name="messageText" placeholder="Your Message Here" maxlength="6000" rows="14" cols="70"></textarea>
						</div>
					</div>
					<div>
						<div>
							<button id="formSubmit" type="submit" name="submit">Post It! </button>
						</div>
					</div>
        </form>
				<div id="success_message" style="width:100%; height:100%; display:none; ">
					<h3>Sent your message successfully!</h3>
				</div>
				<div id="error_message" style="width:100%; height:100%; display:none; ">
					<h3>Error</h3>
					Sorry there was an error sending your form.
				</div>
				<!-- <iframe src="https://docs.google.com/forms/d/e/1FAIpQLSfN4dRF-XhfGXgoJqj61_78QQAN_lwSCVGDu3dp8xBF-SkqhQ/formResponse?entry.655350568=Olga&entry.1024404671=Volodko&entry.958991815=olgagasenko%40gmail.com&entry.1891416769=6197465298&entry.578621625=2%3A45pm&submit=formSubmit" id="no-target" name="no-target" style="visibility:hidden"></iframe> -->
			</div>
		</div><!--END-->
		
		<script>
		// This script will save message details to google sheets
		
			$('#contactForm').on('submit',function(){
					var firstName = encodeURIComponent($('#firstName').val());
					var secondName = encodeURIComponent($('#lastName').val());
					var email = encodeURIComponent($('#email').val()); 
					var phone = encodeURIComponent($('#phoneInput').val());
					var message = encodeURIComponent($('#message').val());
					var q1ID = "entry.655350568";
					var q2ID = "entry.1024404671";
					var q3ID = "entry.958991815";
					var q4ID = "entry.1891416769";
					var q5ID = "entry.578621625";
					var baseURL = 'https://docs.google.com/forms/d/e/1FAIpQLSfN4dRF-XhfGXgoJqj61_78QQAN_lwSCVGDu3dp8xBF-SkqhQ/formResponse?';
					var submitRef = '&submit=formSubmit';
					var submitURL = (baseURL + q1ID + "=" + firstName + "&" + q2ID + "=" + secondName + "&" + q3ID + "=" + email + "&" + q4ID + "=" + phone + "&" + q5ID + "=" + message + submitRef);
					console.log(submitURL);
					
					$.ajax({
						url:submitURL
					});
			});
		</script>
  </body>
</html>